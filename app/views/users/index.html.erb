<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1>All users</h1>
      <% @users.each do |user|  %>
      <div class="mb-2 d-flex">
          <div>
            <% if user.avatar.attached? %>
            <%= cl_image_tag user.avatar.key, height: 40, width: 40, crop: :fill, class:"navbar-user-pic me-2" %>
            <% else %>
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png" style="width: 40px; height:40px; border-radius: 50%;" alt="">
            <% end %>
          </div>
          <div>
            <% if user.is_followed_by?(current_user) %>
              <%= button_to "Unfollow", user_relationships_path(user), method: :delete, class:"ms-4 btn btn-outline-primary "%>
            <% else %>
              <%= button_to "+ Follow", user_relationships_path(user), method: :post, class:"ms-4 btn btn-primary"%>
            <% end %>
          </div>
      </div>
      <p><%= link_to user.name, users_show_path(user.id), class:"link-btn"%></p>
      <hr>
      <% end %>
    </div>
  </div>
</div>
